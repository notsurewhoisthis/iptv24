---
/**
 * Header - Site header with responsive navigation
 *
 * @description
 * A sticky site header that includes logo, navigation links, theme toggle,
 * and a mobile-friendly hamburger menu. Navigation items are automatically
 * filtered based on feature flags from site config.
 *
 * @example
 * ```astro
 * <Header />
 * ```
 */
import { contactForm, siteConfig } from '@/config';
import { Icon } from 'astro-icon/components';
import ThemeToggle from '@ui/ThemeToggle.astro';
import type { FeatureFlags } from '@/lib/types';

const { features, navigation } = siteConfig;
const { newsletter } = siteConfig.content;
const { header: headerNav } = navigation;

// Filter navigation items based on feature flags
const mainNavItems = headerNav.main.filter(
  (item) => !item.feature || features[item.feature as keyof FeatureFlags]
);

// Separate CTA buttons by variant
const ghostCTAs = headerNav.cta.filter((cta) => cta.variant === 'ghost');
const primaryCTA = headerNav.cta.find((cta) => cta.variant === 'primary');
const newsletterAction = contactForm.accessKey ? contactForm.action : '';
const newsletterKey = contactForm.accessKey;
const newsletterEnabled = Boolean(newsletterAction && newsletterKey);
---

<header
  id="site-header"
  class="sticky top-0 z-50 p-1.5 bg-background/80 backdrop-blur-md border-b border-surface"
>
  <nav class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8" aria-label="Main navigation">
    <div class="flex items-center justify-between h-16">
      <!-- Logo / Site Name -->
      <a href="/" class="flex items-center gap-2 font-semibold text-lg text-text">
        {
          siteConfig.logo ? (
            <img src={siteConfig.logo} alt={siteConfig.name} class="h-9 w-auto" />
          ) : (
            siteConfig.name
          )
        }
      </a>

      <!-- Desktop Navigation - Center -->
      <div class="hidden md:flex items-center gap-6">
        {
          mainNavItems.map((item) => (
            <a
              href={item.href}
              class="text-text-muted hover:text-text transition-colors text-sm font-medium rounded-md px-2 py-1 focus-visible:ring-2 focus-visible:ring-primary focus-visible:ring-offset-2 focus-visible:ring-offset-background focus:outline-none"
            >
              {item.label}
            </a>
          ))
        }
      </div>

      <!-- Desktop Actions - Right -->
      <div class="hidden md:flex items-center gap-4">
        <ThemeToggle />
        {
          ghostCTAs.map((cta) => (
            <a
              href={cta.href}
              class="text-text-muted hover:text-text transition-colors text-sm font-medium rounded-md px-2 py-1 focus-visible:ring-2 focus-visible:ring-primary focus-visible:ring-offset-2 focus-visible:ring-offset-background focus:outline-none"
            >
              {cta.label}
            </a>
          ))
        }
        {
          newsletterEnabled && (
            <details class="relative">
              <summary class="list-none px-4 py-2 rounded-md bg-primary text-white text-sm font-medium hover:bg-primary-dark transition-colors cursor-pointer focus:outline-none focus-visible:ring-2 focus-visible:ring-primary focus-visible:ring-offset-2 focus-visible:ring-offset-background">
                {newsletter.buttonText}
              </summary>
              <form
                action={newsletterAction}
                method="POST"
                class="newsletter-inline-form absolute right-0 mt-3 w-72 rounded-md border border-border bg-surface p-3 shadow-lg"
                data-success-message={newsletter.successMessage}
                data-error-message={newsletter.errorMessage}
              >
                <input type="hidden" name="access_key" value={newsletterKey} />
                <input type="hidden" name="subject" value={`${siteConfig.name} Newsletter Signup`} />
                <input type="hidden" name="from_name" value={`${siteConfig.name} Newsletter`} />
                <label class="sr-only" for="newsletter-email-desktop">Email address</label>
                <div class="flex items-center gap-2">
                  <input
                    type="email"
                    id="newsletter-email-desktop"
                    name="email"
                    required
                    placeholder={newsletter.placeholder}
                    class="flex-1 px-3 py-2 text-sm rounded-md border border-border bg-background text-text placeholder:text-text-muted focus:outline-none focus:ring-2 focus:ring-primary focus:border-transparent"
                  />
                  <button
                    type="submit"
                    class="px-3 py-2 text-sm font-medium rounded-md bg-primary text-white hover:bg-primary-dark transition-colors whitespace-nowrap"
                  >
                    {newsletter.buttonText}
                  </button>
                </div>
                <p
                  class="newsletter-inline-message mt-2 text-xs text-text-muted hidden"
                  data-newsletter-message
                ></p>
              </form>
            </details>
          )
        }
        {
          primaryCTA && (
            <a
              href={primaryCTA.href}
              class="px-4 py-2 rounded-md bg-primary text-white text-sm font-medium hover:bg-primary-dark transition-colors focus:outline-none focus-visible:ring-2 focus-visible:ring-primary focus-visible:ring-offset-2 focus-visible:ring-offset-background"
            >
              {primaryCTA.label}
            </a>
          )
        }
      </div>

      <!-- Mobile menu button -->
      <div class="flex items-center gap-2 md:hidden">
        <ThemeToggle />
        <button
          id="mobile-menu-button"
          type="button"
          aria-label="Toggle mobile menu"
          aria-expanded="false"
          aria-controls="mobile-menu"
          class="p-2 rounded-md hover:bg-surface transition-colors focus:outline-none focus-visible:ring-2 focus-visible:ring-primary focus-visible:ring-offset-2 focus-visible:ring-offset-background"
        >
          <Icon
            name="lucide:menu"
            id="menu-icon-open"
            class="w-6 h-6 text-text"
            aria-hidden="true"
          />
          <Icon
            name="lucide:x"
            id="menu-icon-close"
            class="hidden w-6 h-6 text-text"
            aria-hidden="true"
          />
        </button>
      </div>
    </div>
  </nav>
</header>

<!-- Mobile Navigation Overlay -->
<div
  id="mobile-menu"
  class="fixed inset-0 z-40 hidden md:hidden"
  role="dialog"
  aria-modal="true"
  aria-label="Mobile navigation menu"
>
  <!-- Backdrop -->
  <div id="mobile-menu-backdrop" class="absolute inset-0 bg-background/80 backdrop-blur-sm"></div>
  <!-- Menu Panel -->
  <nav
    id="mobile-menu-panel"
    class="absolute left-0 right-0 bg-surface border-b border-background shadow-lg"
    aria-label="Mobile navigation"
  >
    <div class="px-4 py-4 space-y-1">
      {
        mainNavItems.map((item) => (
          <a
            href={item.href}
            class="block px-3 py-3 rounded-md text-text-muted hover:text-text hover:bg-background transition-colors text-base font-medium focus:outline-none focus-visible:ring-2 focus-visible:ring-primary focus-visible:ring-inset"
          >
            {item.label}
          </a>
        ))
      }
      <!-- Divider -->
      <div class="border-t border-border my-2"></div>
      <!-- CTA links -->
      {
        ghostCTAs.map((cta) => (
          <a
            href={cta.href}
            class="block px-3 py-3 rounded-md text-text-muted hover:text-text hover:bg-background transition-colors text-base font-medium focus:outline-none focus-visible:ring-2 focus-visible:ring-primary focus-visible:ring-inset"
          >
            {cta.label}
          </a>
        ))
      }
      {
        newsletterEnabled && (
          <form
            action={newsletterAction}
            method="POST"
            class="newsletter-inline-form mt-2 space-y-3 rounded-md border border-border bg-background p-3"
            data-success-message={newsletter.successMessage}
            data-error-message={newsletter.errorMessage}
          >
            <input type="hidden" name="access_key" value={newsletterKey} />
            <input type="hidden" name="subject" value={`${siteConfig.name} Newsletter Signup`} />
            <input type="hidden" name="from_name" value={`${siteConfig.name} Newsletter`} />
            <label class="sr-only" for="newsletter-email-mobile">Email address</label>
            <input
              type="email"
              id="newsletter-email-mobile"
              name="email"
              required
              placeholder={newsletter.placeholder}
              class="w-full px-3 py-2 text-sm rounded-md border border-border bg-background text-text placeholder:text-text-muted focus:outline-none focus:ring-2 focus:ring-primary focus:border-transparent"
            />
            <button
              type="submit"
              class="w-full px-3 py-2 text-sm font-medium rounded-md bg-primary text-white hover:bg-primary-dark transition-colors"
            >
              {newsletter.buttonText}
            </button>
            <p
              class="newsletter-inline-message text-xs text-text-muted hidden"
              data-newsletter-message
            ></p>
          </form>
        )
      }
      {
        primaryCTA && (
          <a
            href={primaryCTA.href}
            class="block px-3 py-3 rounded-md bg-primary text-white hover:bg-primary-dark transition-colors text-base font-medium text-center focus:outline-none focus-visible:ring-2 focus-visible:ring-primary focus-visible:ring-inset"
          >
            {primaryCTA.label}
          </a>
        )
      }
    </div>
  </nav>
</div>

<script>
  const header = document.getElementById('site-header');
  const mobileMenuButton = document.getElementById('mobile-menu-button');
  const mobileMenu = document.getElementById('mobile-menu');
  const mobileMenuPanel = document.getElementById('mobile-menu-panel');
  const mobileMenuBackdrop = document.getElementById('mobile-menu-backdrop');
  const menuIconOpen = document.getElementById('menu-icon-open');
  const menuIconClose = document.getElementById('menu-icon-close');

  function updateMenuPosition() {
    if (header && mobileMenuPanel) {
      const headerRect = header.getBoundingClientRect();
      mobileMenuPanel.style.top = `${headerRect.bottom}px`;
    }
  }

  function openMobileMenu() {
    updateMenuPosition();
    mobileMenu?.classList.remove('hidden');
    mobileMenuButton?.setAttribute('aria-expanded', 'true');
    menuIconOpen?.classList.add('hidden');
    menuIconClose?.classList.remove('hidden');
    document.body.style.overflow = 'hidden';
  }

  function closeMobileMenu() {
    mobileMenu?.classList.add('hidden');
    mobileMenuButton?.setAttribute('aria-expanded', 'false');
    menuIconOpen?.classList.remove('hidden');
    menuIconClose?.classList.add('hidden');
    document.body.style.overflow = '';
  }

  function toggleMobileMenu() {
    const isExpanded = mobileMenuButton?.getAttribute('aria-expanded') === 'true';
    if (isExpanded) {
      closeMobileMenu();
    } else {
      openMobileMenu();
    }
  }

  mobileMenuButton?.addEventListener('click', toggleMobileMenu);
  mobileMenuBackdrop?.addEventListener('click', closeMobileMenu);

  document.addEventListener('keydown', (e) => {
    if (e.key === 'Escape' && mobileMenuButton?.getAttribute('aria-expanded') === 'true') {
      closeMobileMenu();
      mobileMenuButton?.focus();
    }
  });

  mobileMenu?.querySelectorAll('a').forEach((link) => {
    link.addEventListener('click', closeMobileMenu);
  });

  document.querySelectorAll('.newsletter-inline-form').forEach((form) => {
    const formEl = form as HTMLFormElement;
    const messageEl = formEl.querySelector('[data-newsletter-message]') as HTMLElement | null;
    const emailInput = formEl.querySelector('input[type="email"]') as HTMLInputElement | null;
    const submitBtn = formEl.querySelector('button[type="submit"]') as HTMLButtonElement | null;

    if (!messageEl || !emailInput || !submitBtn) return;

    const successMessage = formEl.dataset.successMessage || 'Thanks for subscribing!';
    const errorMessage = formEl.dataset.errorMessage || 'Something went wrong. Please try again.';

    formEl.addEventListener('submit', async (e) => {
      e.preventDefault();

      const email = emailInput.value.trim();
      if (!email) return;

      const originalText = submitBtn.textContent || '';
      submitBtn.disabled = true;
      submitBtn.textContent = 'Joining...';

      try {
        const response = await fetch(formEl.action, {
          method: 'POST',
          body: new FormData(formEl),
          headers: { Accept: 'application/json' },
        });

        if (!response.ok) {
          throw new Error('Subscription failed');
        }

        messageEl.textContent = successMessage;
        messageEl.className = 'newsletter-inline-message mt-2 text-xs text-green-600';
        emailInput.value = '';
      } catch {
        messageEl.textContent = errorMessage;
        messageEl.className = 'newsletter-inline-message mt-2 text-xs text-red-600';
      } finally {
        submitBtn.disabled = false;
        submitBtn.textContent = originalText || 'Join the newsletter';
      }
    });
  });
</script>
