---
import MarketingLayout from './MarketingLayout.astro';
import LastUpdated from '@/components/common/LastUpdated.astro';
import { Icon } from 'astro-icon/components';
import { calculateReadingTime, formatDate } from '@/lib/utils';
import { getAuthorByName } from '@/data/authors';
import { siteConfig } from '@/config';

interface Props {
  title: string;
  seoTitle?: string;
  description: string;
  publishedDate: Date;
  updatedDate?: Date;
  author: string;
  image?: string;
  tags?: string[];
  content: string;
  faq?: { question: string; answer: string }[];
  howTo?: { name: string; steps: { name: string; text: string }[] };
  canonicalUrl?: string;
}

const {
  title,
  seoTitle,
  description,
  publishedDate,
  updatedDate,
  author,
  image,
  tags = [],
  content,
  faq,
  howTo,
  canonicalUrl,
} = Astro.props;

const readingTime = calculateReadingTime(content);
const formattedDate = formatDate(publishedDate, {
  year: 'numeric',
  month: 'long',
  day: 'numeric',
});
const authorProfile = getAuthorByName(author) || getAuthorByName(siteConfig.author);
const authorName = authorProfile?.name || author || siteConfig.author;
const authorUrl = authorProfile ? `/authors/${authorProfile.slug}/` : '';
const hasQuickAnswer = /##\\s+quick answer/i.test(content);
const shortTopic = title.replace(/\\s*\\(\\d{4}\\).*$/, '').replace(/\\s+\\|\\s+.*/, '').trim();
const fallbackFaq = [
  {
    question: `What does "${shortTopic}" usually mean?`,
    answer:
      'Most IPTV issues come from playlist credentials, network instability, or app compatibility. Start with the quick answer checklist and then follow the step-by-step fixes.',
  },
  {
    question: 'What is the fastest fix to try first?',
    answer:
      'Restart the app and device, confirm your playlist or Xtream Codes details, and test on a second network to isolate provider versus local issues.',
  },
  {
    question: 'When should I contact my IPTV provider?',
    answer:
      'If the same error happens across multiple devices or networks, collect the error message, app version, and timestamps, then contact your provider with that data.',
  },
];
const resolvedFaq = faq?.length ? faq : fallbackFaq;
const personSchema = authorProfile
  ? {
      name: authorProfile.name,
      description: authorProfile.bio,
      url: new URL(authorUrl, siteConfig.url).href,
      jobTitle: authorProfile.role,
      sameAs: authorProfile.sameAs,
      worksFor: {
        '@type': 'Organization',
        name: siteConfig.name,
        url: siteConfig.url,
      },
    }
  : null;
---

<MarketingLayout
  title={title}
  seoTitle={seoTitle}
  description={description}
  image={image}
  type="article"
  publishedDate={publishedDate}
  modifiedDate={updatedDate}
  author={authorName}
  tags={tags}
  faq={resolvedFaq}
  howTo={howTo}
  canonicalUrl={canonicalUrl}
  person={personSchema}
>
  <article class="py-section">
    <div class="max-w-3xl mx-auto px-4 sm:px-6 lg:px-8">
      <!-- Article Header -->
      <header class="mb-8">
        <h1 class="text-4xl font-bold text-text mb-4">{title}</h1>
        <p class="text-lg text-text-muted mb-6">{description}</p>

        <!-- Article Metadata -->
        <div
          class="flex flex-wrap items-center gap-4 text-sm text-text-muted border-b border-border pb-6"
        >
          <span class="flex items-center gap-1">
            <Icon name="lucide:user" class="w-4 h-4" />
            {authorUrl ? (
              <a class="text-primary hover:underline" href={authorUrl}>
                {authorName}
              </a>
            ) : (
              <span>{authorName}</span>
            )}
          </span>
          <span class="flex items-center gap-1">
            <Icon name="lucide:calendar" class="w-4 h-4" />
            {formattedDate}
          </span>
          <span class="flex items-center gap-1">
            <Icon name="lucide:clock" class="w-4 h-4" />
            {readingTime} min read
          </span>
        </div>

        <!-- Tags -->
        {
          tags.length > 0 && (
            <div class="flex flex-wrap gap-2 mt-4">
              {tags.map((tag) => (
                <span class="px-3 py-1 text-xs font-medium bg-surface text-text-muted rounded-full">
                  {tag}
                </span>
              ))}
            </div>
          )
        }
      </header>

      <!-- Article Content -->
      {!hasQuickAnswer && (
        <div class="rounded-lg border border-border bg-surface p-4 mb-6">
          <p class="text-sm text-text-muted">
            <span class="font-semibold text-text">Quick answer:</span> {description}
          </p>
        </div>
      )}
      <div class="prose prose-lg max-w-none dark:prose-invert">
        <slot name="content" />
      </div>
      <slot />

      <!-- Last Updated indicator for content freshness -->
      <LastUpdated publishedDate={publishedDate} updatedDate={updatedDate} />

      <div class="mt-10 rounded-lg border border-border p-6">
        <p class="text-sm uppercase tracking-[0.2em] text-text-muted">About the author</p>
        <h2 class="mt-2 text-lg font-semibold text-text">{authorName}</h2>
        <p class="mt-1 text-sm text-text-muted">{authorProfile?.role || 'Editorial Lab'}</p>
        <p class="mt-2 text-sm text-text-muted">
          {authorProfile?.bio ||
            'Streaming Guide Lab reviews IPTV apps and devices with a focus on playlist compatibility, playback stability, and network performance.'}
        </p>
        <div class="mt-3 flex flex-wrap gap-4 text-sm">
          {authorUrl && (
            <a class="text-primary hover:underline" href={authorUrl}>
              View author profile
            </a>
          )}
          <a class="text-primary hover:underline" href="/about/">
            Read our testing methodology
          </a>
        </div>
      </div>
    </div>
  </article>
</MarketingLayout>
