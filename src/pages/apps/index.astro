---
import MarketingLayout from '@/layouts/MarketingLayout.astro';
import ItemListSchema from '@/components/common/ItemListSchema.astro';
import { getCollection } from 'astro:content';
import { siteConfig } from '@/config';
import { getTopApps, slugify, getAppSummary } from '@/data/apps';

const entries = await getCollection('apps', ({ data }) => !data.draft);
const posts = [...entries].sort(
  (a, b) => b.data.publishedDate.getTime() - a.data.publishedDate.getTime()
);

const iosApps = getTopApps('ios', 3);
const macApps = getTopApps('macos', 3);

// Generate ItemList schema items
const listItems = [
  ...iosApps.map(({ app }) => ({
    name: app.name,
    url: `/apps/ios/${slugify(app.name)}/`,
    description: getAppSummary(app),
  })),
  ...macApps.map(({ app }) => ({
    name: app.name,
    url: `/apps/macos/${slugify(app.name)}/`,
    description: getAppSummary(app),
  })),
  ...posts.slice(0, 5).map((post) => ({
    name: post.data.title,
    url: `/apps/${post.slug ?? post.id}/`,
    description: post.data.description,
  })),
];
---

<MarketingLayout
  title={`IPTV Apps - ${siteConfig.name}`}
  description="Real IPTV app comparisons for iOS and macOS with App Store data and editorial picks."
>
  <ItemListSchema 
    name="Best IPTV Apps" 
    description="Top-rated IPTV player apps for iOS, macOS, and Android with App Store data and expert reviews"
    items={listItems}
  />
  <section class="py-section">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
      <header class="text-center mb-12">
        <h1 class="text-4xl sm:text-5xl font-bold text-text">IPTV Apps</h1>
        <p class="mt-4 text-lg text-text-muted">
          We compare iOS and macOS IPTV apps using live App Store data, update recency,
          and editorial criteria. JamRun IPTV is our top pick for iOS and macOS.
        </p>
      </header>

      <div class="grid gap-8 lg:grid-cols-2">
        <div class="rounded-lg border border-border p-6">
          <div class="flex items-center justify-between">
            <h2 class="text-xl font-semibold text-text">Top iOS picks</h2>
            <a class="text-sm text-primary hover:underline" href="/apps/ios/">View all</a>
          </div>
          <div class="mt-4 space-y-4">
            {iosApps.map(({ app }) => (
              <a
                href={`/apps/ios/${slugify(app.name)}/`}
                class="block rounded-md border border-border p-4 hover:border-primary transition-colors"
              >
                <div class="flex items-center justify-between">
                  <h3 class="font-semibold text-text">{app.name}</h3>
                  <span class="text-xs text-text-muted">{app.formattedPrice}</span>
                </div>
                <p class="mt-2 text-sm text-text-muted">{getAppSummary(app)}</p>
              </a>
            ))}
          </div>
        </div>

        <div class="rounded-lg border border-border p-6">
          <div class="flex items-center justify-between">
            <h2 class="text-xl font-semibold text-text">Top macOS picks</h2>
            <a class="text-sm text-primary hover:underline" href="/apps/macos/">View all</a>
          </div>
          <div class="mt-4 space-y-4">
            {macApps.map(({ app }) => (
              <a
                href={`/apps/macos/${slugify(app.name)}/`}
                class="block rounded-md border border-border p-4 hover:border-primary transition-colors"
              >
                <div class="flex items-center justify-between">
                  <h3 class="font-semibold text-text">{app.name}</h3>
                  <span class="text-xs text-text-muted">{app.formattedPrice}</span>
                </div>
                <p class="mt-2 text-sm text-text-muted">{getAppSummary(app)}</p>
              </a>
            ))}
          </div>
        </div>
      </div>

      <div class="mt-8 rounded-lg border border-border p-6">
        <div class="flex items-center justify-between">
          <h2 class="text-xl font-semibold text-text">Top Android IPTV apps</h2>
          <a class="text-sm text-primary hover:underline" href="/apps/android/">View all</a>
        </div>
        <p class="mt-3 text-sm text-text-muted">
          Android rankings are based on Google Play ratings, install volume, and update recency.
        </p>
      </div>

      <div class="mt-8 rounded-lg border border-border p-6">
        <h2 class="text-xl font-semibold text-text">Compare apps side by side</h2>
        <p class="mt-3 text-sm text-text-muted">
          Use our comparison library to see pricing, update cadence, and ratings across the top IPTV players.
        </p>
        <div class="mt-4 flex flex-wrap gap-4 text-sm">
          <a class="text-primary hover:underline" href="/comparisons/">Browse app comparisons</a>
          <a class="text-primary hover:underline" href="/learn/choosing-iptv-player/">How to choose an IPTV app</a>
        </div>
      </div>

      <div class="mt-12 space-y-8">
        {posts.map((post) => (
          <article class="group">
            <a href={`/apps/${post.slug ?? post.id}/`} class="block">
              <div class="rounded-lg border border-border p-6 hover:border-primary transition-colors">
                <p class="text-sm text-text-muted">
                  {post.data.publishedDate.toLocaleDateString('en-US', {
                    year: 'numeric',
                    month: 'long',
                    day: 'numeric',
                  })}
                </p>
                <h2 class="mt-2 text-2xl font-semibold text-text group-hover:text-primary">
                  {post.data.title}
                </h2>
                <p class="mt-3 text-text-muted">{post.data.description}</p>
              </div>
            </a>
          </article>
        ))}
      </div>

      {posts.length === 0 && (
        <div class="text-center py-12">
          <p class="text-text-muted">New app tests are in progress. Check back soon.</p>
        </div>
      )}
    </div>
  </section>
</MarketingLayout>
