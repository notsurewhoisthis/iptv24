---
import MarketingLayout from '@/layouts/MarketingLayout.astro';
import { deviceCategories, getDevicesByCategory } from '@/data/devices';
import { siteConfig } from '@/config';

export async function getStaticPaths() {
  return deviceCategories.map((category) => ({ params: { category: category.category } }));
}

const { category: categorySlug } = Astro.params as { category: string };
const category = deviceCategories.find((entry) => entry.category === categorySlug);
if (!category) {
  throw new Error(`Device category not found: ${categorySlug}`);
}

const devices = getDevicesByCategory(category.category);
const description = `${category.label} for IPTV streaming with real specs and source links.`;
---

<MarketingLayout title={`${category.label} - ${siteConfig.name}`} description={description}>
  <section class="py-section">
    <div class="max-w-5xl mx-auto px-4 sm:px-6 lg:px-8">
      <header class="mb-10">
        <p class="text-sm uppercase tracking-[0.2em] text-text-muted">{category.label}</p>
        <h1 class="mt-3 text-4xl font-bold text-text">{category.label} for IPTV</h1>
        <p class="mt-4 text-lg text-text-muted">{category.description}</p>
        {category.comparisonSlug && (
          <a
            class="mt-4 inline-flex text-primary hover:underline"
            href={`/devices/compare/${category.comparisonSlug}/`}
          >
            View comparison
          </a>
        )}
      </header>

      <div class="grid gap-6 md:grid-cols-2">
        {devices.map((device) => (
          <a
            class="rounded-lg border border-border p-6 hover:border-primary transition-colors"
            href={`/devices/models/${device.slug}/`}
          >
            <h2 class="text-xl font-semibold text-text">{device.name}</h2>
            <p class="mt-2 text-sm text-text-muted">OS: {device.os}</p>
            <ul class="mt-3 space-y-1 text-sm text-text-muted">
              {device.specs.slice(0, 3).map((spec) => (
                <li>{spec.label}: {spec.value}</li>
              ))}
            </ul>
            {device.review && (
              <div class="mt-4 text-sm text-text-muted">
                <p class="font-semibold text-text">Review verdict</p>
                <p class="mt-1">{device.review.summary}</p>
                <p class="mt-2 text-xs text-text-muted">
                  Overall score: {device.review.score.overall.toFixed(1)}/10
                </p>
              </div>
            )}
          </a>
        ))}
      </div>
    </div>
  </section>
</MarketingLayout>
