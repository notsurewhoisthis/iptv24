---
import MarketingLayout from '@/layouts/MarketingLayout.astro';
import { getCollection } from 'astro:content';
import { siteConfig } from '@/config';

const apps = await getCollection('apps', ({ data }) => !data.draft);
const devices = await getCollection('devices', ({ data }) => !data.draft);
const guides = await getCollection('guides', ({ data }) => !data.draft);
const troubleshooting = await getCollection('troubleshooting', ({ data }) => !data.draft);

const latestApps = [...apps].sort(
  (a, b) => b.data.publishedDate.getTime() - a.data.publishedDate.getTime()
).slice(0, 3);
const latestDevices = [...devices].sort(
  (a, b) => b.data.publishedDate.getTime() - a.data.publishedDate.getTime()
).slice(0, 3);
const latestGuides = [...guides].sort(
  (a, b) => b.data.publishedDate.getTime() - a.data.publishedDate.getTime()
).slice(0, 3);
const latestFixes = [...troubleshooting].sort(
  (a, b) => b.data.publishedDate.getTime() - a.data.publishedDate.getTime()
).slice(0, 3);
---

<MarketingLayout
  title={`${siteConfig.name} - ${siteConfig.description}`}
  description={siteConfig.description}
>
  <section class="py-section">
    <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="grid gap-10 lg:grid-cols-2 items-center">
        <div>
          <p class="text-sm uppercase tracking-[0.2em] text-text-muted">IPTV device and app lab</p>
          <h1 class="mt-4 text-4xl sm:text-5xl font-bold text-text">
            IPTV app comparisons, device rankings, and real troubleshooting across every platform.
          </h1>
          <p class="mt-4 text-lg text-text-muted">
            We compile App Store and Google Play data, verified device specs, and tested troubleshooting
            steps so you can pick the right setup fast.
          </p>
          <div class="mt-6 flex flex-wrap gap-4">
            <a
              href="/devices/categories/"
              class="px-5 py-3 rounded-md bg-primary text-white text-sm font-medium hover:bg-primary-dark transition-colors"
            >
              Browse device categories
            </a>
            <a
              href="/apps"
              class="px-5 py-3 rounded-md border border-border text-sm font-medium text-text hover:border-primary transition-colors"
            >
              Browse IPTV apps
            </a>
          </div>
          <div class="mt-6 grid grid-cols-2 gap-4 text-sm text-text-muted">
            <div>
              <p class="font-semibold text-text">Device-first testing</p>
              <p>tvOS, Android TV, Fire OS, webOS, and mobile OS versions noted.</p>
            </div>
            <div>
              <p class="font-semibold text-text">No fluff</p>
              <p>Real fixes for buffering, EPG drift, login errors, and app crashes.</p>
            </div>
          </div>
        </div>
        <div class="rounded-2xl border border-border bg-surface p-8">
          <h2 class="text-xl font-semibold text-text">Most requested right now</h2>
          <ul class="mt-4 space-y-4">
            <li>
              <a class="text-primary hover:text-primary-dark" href="/apps/android/">
                Top Android IPTV apps (ranked)
              </a>
            </li>
            <li>
              <a class="text-primary hover:text-primary-dark" href="/devices/categories/streaming-sticks/">
                Best streaming sticks for IPTV
              </a>
            </li>
            <li>
              <a class="text-primary hover:text-primary-dark" href="/troubleshooting/platforms/">
                Device and OS troubleshooting guides
              </a>
            </li>
          </ul>
          <p class="mt-6 text-sm text-text-muted">
            Updated weekly with new app versions and playback notes.
          </p>
        </div>
      </div>
    </div>
  </section>

  <section class="py-section bg-surface">
    <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
      <h2 class="text-3xl font-bold text-text">Browse by topic</h2>
      <div class="mt-8 grid gap-6 md:grid-cols-2 lg:grid-cols-3">
        <a href="/apps" class="rounded-xl border border-border p-6 hover:border-primary transition-colors">
          <h3 class="text-lg font-semibold text-text">Apps</h3>
          <p class="mt-2 text-sm text-text-muted">iOS, macOS, and Android IPTV app rankings.</p>
        </a>
        <a href="/devices" class="rounded-xl border border-border p-6 hover:border-primary transition-colors">
          <h3 class="text-lg font-semibold text-text">Devices</h3>
          <p class="mt-2 text-sm text-text-muted">Streaming sticks, boxes, smart TVs, and mobiles.</p>
        </a>
        <a href="/guides" class="rounded-xl border border-border p-6 hover:border-primary transition-colors">
          <h3 class="text-lg font-semibold text-text">Guides</h3>
          <p class="mt-2 text-sm text-text-muted">Playlists, EPG, VPN, and setup steps.</p>
        </a>
        <a href="/troubleshooting" class="rounded-xl border border-border p-6 hover:border-primary transition-colors">
          <h3 class="text-lg font-semibold text-text">Troubleshooting</h3>
          <p class="mt-2 text-sm text-text-muted">Fix buffering, errors, and playback glitches.</p>
        </a>
        <a href="/comparisons" class="rounded-xl border border-border p-6 hover:border-primary transition-colors">
          <h3 class="text-lg font-semibold text-text">Comparisons</h3>
          <p class="mt-2 text-sm text-text-muted">Side-by-side app and device matchups.</p>
        </a>
        <a href="/learn" class="rounded-xl border border-border p-6 hover:border-primary transition-colors">
          <h3 class="text-lg font-semibold text-text">Learning Center</h3>
          <p class="mt-2 text-sm text-text-muted">Deep dives into IPTV tech and setup strategy.</p>
        </a>
      </div>
    </div>
  </section>

  <section class="py-section">
    <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
      <h2 class="text-3xl font-bold text-text">Comparison hubs</h2>
      <p class="mt-3 text-text-muted">
        Data-driven app rankings and real device comparisons built from App Store, Google Play, and hardware specs.
      </p>
      <div class="mt-8 grid gap-6 md:grid-cols-3">
        <a href="/apps/ios/" class="rounded-xl border border-border p-6 hover:border-primary transition-colors">
          <h3 class="text-lg font-semibold text-text">Best iOS IPTV apps</h3>
          <p class="mt-2 text-sm text-text-muted">Live App Store data with JamRun IPTV as top pick.</p>
        </a>
        <a href="/apps/macos/" class="rounded-xl border border-border p-6 hover:border-primary transition-colors">
          <h3 class="text-lg font-semibold text-text">Best macOS IPTV apps</h3>
          <p class="mt-2 text-sm text-text-muted">App rankings focused on Mac playback stability.</p>
        </a>
        <a href="/apps/android/" class="rounded-xl border border-border p-6 hover:border-primary transition-colors">
          <h3 class="text-lg font-semibold text-text">Top Android IPTV apps</h3>
          <p class="mt-2 text-sm text-text-muted">Google Play data with install and update signals.</p>
        </a>
        <a href="/devices/compare/apple-tv-4k-models/" class="rounded-xl border border-border p-6 hover:border-primary transition-colors">
          <h3 class="text-lg font-semibold text-text">Apple TV 4K models</h3>
          <p class="mt-2 text-sm text-text-muted">Compare chips, HDR, and networking for IPTV.</p>
        </a>
        <a href="/devices/compare/best-4k-streaming-sticks/" class="rounded-xl border border-border p-6 hover:border-primary transition-colors">
          <h3 class="text-lg font-semibold text-text">4K streaming sticks</h3>
          <p class="mt-2 text-sm text-text-muted">Fire TV, Roku, Chromecast, and Xiaomi compared.</p>
        </a>
        <a href="/devices/compare/streaming-boxes-for-iptv/" class="rounded-xl border border-border p-6 hover:border-primary transition-colors">
          <h3 class="text-lg font-semibold text-text">Streaming boxes</h3>
          <p class="mt-2 text-sm text-text-muted">High-performance boxes for heavy IPTV use.</p>
        </a>
        <a href="/devices/compare/flagship-mobile-iptv-devices/" class="rounded-xl border border-border p-6 hover:border-primary transition-colors">
          <h3 class="text-lg font-semibold text-text">Flagship mobile devices</h3>
          <p class="mt-2 text-sm text-text-muted">Phones and tablets tuned for IPTV streaming.</p>
        </a>
        <a href="/comparisons/" class="rounded-xl border border-border p-6 hover:border-primary transition-colors">
          <h3 class="text-lg font-semibold text-text">All comparisons</h3>
          <p class="mt-2 text-sm text-text-muted">Explore 50+ app and device matchups.</p>
        </a>
      </div>
    </div>
  </section>

  <section class="py-section">
    <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="grid gap-10 lg:grid-cols-2">
        <div>
          <h2 class="text-2xl font-semibold text-text">Latest guides</h2>
          <div class="mt-6 space-y-5">
            {latestGuides.map((post) => (
              <a
                href={`/guides/${post.slug ?? post.id}/`}
                class="block rounded-lg border border-border p-5 hover:border-primary transition-colors"
              >
                <p class="text-sm text-text-muted">
                  {post.data.publishedDate.toLocaleDateString('en-US', {
                    month: 'long',
                    day: 'numeric',
                    year: 'numeric',
                  })}
                </p>
                <h3 class="mt-2 text-lg font-semibold text-text">{post.data.title}</h3>
                <p class="mt-2 text-sm text-text-muted">{post.data.description}</p>
              </a>
            ))}
          </div>
        </div>
        <div>
          <h2 class="text-2xl font-semibold text-text">Latest app tests</h2>
          <div class="mt-6 space-y-5">
            {latestApps.map((post) => (
              <a
                href={`/apps/${post.slug ?? post.id}/`}
                class="block rounded-lg border border-border p-5 hover:border-primary transition-colors"
              >
                <p class="text-sm text-text-muted">
                  {post.data.publishedDate.toLocaleDateString('en-US', {
                    month: 'long',
                    day: 'numeric',
                    year: 'numeric',
                  })}
                </p>
                <h3 class="mt-2 text-lg font-semibold text-text">{post.data.title}</h3>
                <p class="mt-2 text-sm text-text-muted">{post.data.description}</p>
              </a>
            ))}
          </div>
        </div>
      </div>
    </div>
  </section>

  <section class="py-section bg-surface">
    <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="grid gap-10 lg:grid-cols-2">
        <div>
          <h2 class="text-2xl font-semibold text-text">Device setup snapshots</h2>
          <div class="mt-6 space-y-5">
            {latestDevices.map((post) => (
              <a
                href={`/devices/${post.slug ?? post.id}/`}
                class="block rounded-lg border border-border p-5 hover:border-primary transition-colors"
              >
                <p class="text-sm text-text-muted">
                  {post.data.publishedDate.toLocaleDateString('en-US', {
                    month: 'long',
                    day: 'numeric',
                    year: 'numeric',
                  })}
                </p>
                <h3 class="mt-2 text-lg font-semibold text-text">{post.data.title}</h3>
                <p class="mt-2 text-sm text-text-muted">{post.data.description}</p>
              </a>
            ))}
          </div>
        </div>
        <div>
          <h2 class="text-2xl font-semibold text-text">Troubleshooting fixes</h2>
          <div class="mt-6 space-y-5">
            {latestFixes.map((post) => (
              <a
                href={`/troubleshooting/${post.slug ?? post.id}/`}
                class="block rounded-lg border border-border p-5 hover:border-primary transition-colors"
              >
                <p class="text-sm text-text-muted">
                  {post.data.publishedDate.toLocaleDateString('en-US', {
                    month: 'long',
                    day: 'numeric',
                    year: 'numeric',
                  })}
                </p>
                <h3 class="mt-2 text-lg font-semibold text-text">{post.data.title}</h3>
                <p class="mt-2 text-sm text-text-muted">{post.data.description}</p>
              </a>
            ))}
          </div>
        </div>
      </div>
    </div>
  </section>
</MarketingLayout>
